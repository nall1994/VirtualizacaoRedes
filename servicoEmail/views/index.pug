extends layout

block content
  header.w3-container.w3-indigo
    h1.w3-center Serviço de Email
  .w3-container.w3-card-4
    h2.w3-center.w3-text-teal Enviar email
      br
      form(action='/enviar' method='POST')
        input.w3-input.w3-border(type='text' name='receiveremail' placeholder='Insira o email de destino')
        br
        hr
        input.w3-input.w3-border(type='text' name='subject' placeholder='Insira o assunto do email')
        br
        hr
        textarea.w3-input.w3-border(name='message' placeholder='Escreva a mensagem que pretende enviar.')
        br
        input.w3-btn.w3-teal(type='submit' name='enviar' value='Enviar')
    br
  br
  footer.w3-container.w3-indigo
    p Virtualização de Redes - TP1 2018/2019
    
